<script type="text/javascript">

	var ws;
	
	$(document).ready(function(){
		$("#enterBtn").click(function(){
			ws = new WebSocket("ws://211.44.44.64/websocket_bean/ws");
			
			ws.onerror = onError;
			ws.onmessage = onMessage;
			ws.onopen = onOpen;
			ws.onclose = onClose;
		});
		
		$("#exitBtn").click(function(){
			ws.close();
		});
		
		$("#sendBtn").click(function(){
			sendMessage());
		});
	});

</script>

